<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="d-flex justify-content-between w-100 navbar-nav">
        <!-- <div class="col-auto"> -->
        <div class="d-flex">
          <a class="p-2 nav-item nav-link" href="/urls">My URLs</a>
          <a class="p-2 nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
        <div class="d-flex">
          <% if (!username) { %>
            <form class="d-flex" action="/login" method="POST">
              <input type="text" class="form-control mr-2" id="username" name="username" placeholder="Username">
              <button type="submit" class="btn btn-primary w-100">Log in</button>
            </form>
          <% } else { %>
            <form class="d-flex" action="/logout" method="POST">
              <label class="mb-0 d-flex align-items-center mr-2">Logged in as: <%= username %></label>
              <button type="submit" class="btn btn-outline-light">Logout</button>
            </form>
          <% } %>
      </div>
    </div>
  </nav>
</hea>